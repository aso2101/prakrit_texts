	<ab n="63" xml:id="PraPrā.7.63">duhi-lihi-vahāṁ dujjha-lijjha-bujjhāḥ</ab>
	<ab n="64" xml:id="PraPrā.7.64">hr̥ñ-kr̥ñōr hīra-kīrau</ab>
	<ab n="65" xml:id="PraPrā.7.65">jñō jāṇa-muṇau</ab>
	<ab n="66" xml:id="PraPrā.7.66">grahēr ghēppaḥ</ab>
	<ab n="67" xml:id="PraPrā.7.67">ktēna diṇṇādayaḥ</ab>
	<ab n="68" xml:id="PraPrā.7.68">takṣē raṁpa-vacchau</ab>
	<ab n="69" xml:id="PraPrā.7.69">khidēr visūraḥ</ab>
	<ab n="70" xml:id="PraPrā.7.70">krudhēr jūraḥ</ab>
	<ab n="71" xml:id="PraPrā.7.71">carcēś caraḥ</ab>
	<ab n="72" xml:id="PraPrā.7.72">trasēr vajjaḥ</ab>
	<ab n="73" xml:id="PraPrā.7.73">mr̥jēr lubha-puṁsau</ab>
	<ab n="74" xml:id="PraPrā.7.74">buḍḍa-khuppau majjēḥ</ab>
	<ab n="75" xml:id="PraPrā.7.75">dr̥śēḥ pulaa-ṇiaccha-avakkha-saccavāḥ</ab>
	<ab n="76" xml:id="PraPrā.7.76">śakēs tara-vaa-tīrāḥ</ab>
	<ab n="77" xml:id="PraPrā.7.77">ēvam anyē ’pi</ab>
	<ab n="78" xml:id="PraPrā.7.78">śēṣāṇāṁ adantatā</ab>
	<ab n="79" xml:id="PraPrā.7.79">anadantānām ad vā</ab>
	<ab n="80" xml:id="PraPrā.7.80">aḍādēśā bahulam</ab>
	<trailer>iti śrīvasantarājaviracitāyāṁ prākr̥tasañjīvanyāṁ dhātuvidhiḥ saptamaḥ paricchēdaḥ</trailer>
      </div>

      <div type="chapter" n="8">
	<head>aṣṭạmaḥ paricchēdaḥ</head>
	<head>atha nipātavidhir ucyatē</head>
	<ab n="1" xml:id="PraPrā.8.1">nipātāḥ</ab>
	<ab n="2" xml:id="PraPrā.8.2">kīsa kim-arthē</ab>
	<ab n="3" xml:id="PraPrā.8.3">huṁ dāna-pr̥cchā-nivāraṇēṣu</ab>
	<ab n="4" xml:id="PraPrā.8.4">ccia ccēa avadhāraṇē</ab>
	<ab n="5" xml:id="PraPrā.8.5">ō sūcanā-páscāttāpa-vikalpēṣu</ab>
	<ab n="6" xml:id="PraPrā.8.6">ira-kira-kilā aniścayākhyānēṣu</ab>
	<ab n="7" xml:id="PraPrā.8.7">hu kkhu niścaya-vitarka-sambhāvanāsu</ab>
	<ab n="8" xml:id="PraPrā.8.8">i-jē-rāḥ pādapūraṇē</ab>
	<ab n="9" xml:id="PraPrā.8.9">ānantaryē ṇavari</ab>
	<ab n="10" xml:id="PraPrā.8.10">u kṣēpa-vismaya-sūcanāsu</ab>
	<ab n="11" xml:id="PraPrā.8.11">kiṇō praśnē</ab>
	<ab n="12" xml:id="PraPrā.8.12">abbō duḥkha-sūcanā-saṁbhāṣaṇēṣu</ab>
	<ab n="13" xml:id="PraPrā.8.13">alāhi nivāraṇē</ab>
	<ab n="14" xml:id="PraPrā.8.14">aï raṇē saṁbhāṣaṇē</ab>
	<ab n="15" xml:id="PraPrā.8.15">vēcca āmantraṇē</ab>
	<ab n="16" xml:id="PraPrā.8.16">dhū kutsāyāṁ</ab>
	<ab n="17" xml:id="PraPrā.8.17">rē arē harē saṁbhāṣaṇa-ratikalaha-kṣēpēṣu</ab>
	<ab n="18" xml:id="PraPrā.8.18">piva miva viva va ivārthē</ab>
	<ab n="19" xml:id="PraPrā.8.19">śēṣāḥ saṁskr̥tāt</ab>
	<trailer>iti vasantarājaviracitāyāṁ prākr̥tasañjīvanīvr̥ttau nipātavidhir aṣṭamaḥ paricchēdaḥ samāptaḥ</trailer>
      </div>
